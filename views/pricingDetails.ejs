         <div class="site-section">
             <div class="container">
                 <div class="row">
                     <div class="col-lg-8" style="margin: auto">

                         <h3 class="text-black">Booking Details.</h3>
                         <p class="mb-4">
                             <strong class="text-black mr-3">Schedule: <%= waktuService %> || <%= tanggalService %>
                             </strong>
                         </p>

                         <form action="/booked" method="post" class="form-box">
                             <!-- Error and Success Message -->
                             <% if(messages.error){ %>
                             <h4 style="color:#d82436">Booking Gagal!</h4>
                             <!-- <p style="color:#d82436">Insert the <b style="color:#d82436">Service Data</b> correctly.</p> -->
                             <!-- </br> -->
                             <%} else if(messages.success){ %>
                             <h4 style="color:#5cb85c">Booking Sukses!</h4>
                             <!-- <p>Successfully insert the <b style="color:#5cb85c">Service Data</b>.</p> -->
                             </br>
                             <% } %>
                             <h3 class="h4 text-black mb-4">Data Personal Anda.</h3>
                             <!-- Data Personal -->
                             <div class="form-group">
                                 <label for="name" style="font-size: 16px">Nama Lengkap</label>
                                 <input type="text" class="form-control" name="namaPemilik" value="<%= namaPemilik %>"
                                     readonly>
                             </div>
                             <div class="form-group">
                                 <label for="name" style="font-size: 16px">Email</label>
                                 <input type="email" class="form-control" name="email" value="<%= email %>" readonly>
                             </div>
                             <div class="form-group">
                                 <label for="name" style="font-size: 16px">Alamat Lengkap</label>
                                 <input type="text" class="form-control" name="alamat" value="<%= alamat %>" readonly>
                             </div>
                             <div class="form-group">
                                 <label for="name" style="font-size: 16px">Nomor Telepon</label>
                                 <input type="text" class="form-control" name="nomorTelepon" value="<%= nomorTelepon %>"
                                     readonly>
                             </div>
                             <div class="form-group">
                                 <label for="name" style="font-size: 16px">Tanggal Service</label>
                                 <input type="date" id="bookingDate" class="form-control" name="tanggalService"
                                     value="<%= tanggalService %>" readonly>
                             </div>
                             <div class="form-group">
                                 <label for="name" style="font-size: 16px">Waktu Service</label>
                                 <input type="text" class="form-control" name="waktuService" value="<%= waktuService %>"
                                     readonly>
                             </div>
                             <h3 class="h4 text-black mb-4">Data Mobil Anda.</h3>
                             <!-- Data Kendaraan -->
                             <div class="form-group">
                                 <label for="name" style="font-size: 16px">Merk Mobil</label>
                                 <input type="text" class="form-control" name="merkMobil" value="<%= merkMobil %>"
                                     readonly>
                             </div>
                             <div class="form-group">
                                 <label for="name" style="font-size: 16px">Tipe Mobil</label>
                                 <input type="text" class="form-control" name="tipeMobil" value="<%= tipeMobil %>"
                                     readonly>
                             </div>
                             <div class="form-group">
                                 <h3 class="h4 text-black mb-4">Detail Perawatan Mobil</h3>
                                 <label for="name" style="font-size: 16px">Jenis Perawatan</label>
                                 <input type="text" class="form-control" name="jenisPerawatan"
                                     value="<%= jenisPerawatan %>" readonly>
                             </div>
                             <% if(multiLine === "Y") {%>
                             <div class="form-group">
                                 <label for="name" style="font-size: 16px">Deskripsi Kerusakan</label>
                                 <textarea rows="4" cols="30" class="form-control" name="detailPerawatan"
                                     readonly><%= detailPerawatan %></textarea>
                             </div>
                             <% } else { %>
                             <div class="form-group">
                                 <label for="name" style="font-size: 16px">Detail Perawatan</label>
                                 <input type="text" class="form-control" name="detailPerawatan"
                                     value="<%= detailPerawatan %>" readonly>
                             </div>
                             <% } %>
                             <% if(multiLine === "N") {%>
