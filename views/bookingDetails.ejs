                             </div>
                             <!-- Jenis Perawatan -->
                             <div class="form-group">
                                 <select class="form-control" onchange="onSelectPerawatan(this)" name="jenisPerawatan"
                                     required>
                                     <option disabled selected>Pilih Jenis Perawatan Mobil</option>
                                     <option value="Perawatan Khusus">Perawatan Khusus</option>
                                     <option value="Variasi / Aksesoris Tambahan">Variasi / Aksesoris Tambahan</option>
                                     <option value="Car Care">Car Care</option>
                                 </select>
                             </div>
                             <!-- Validasi -->
                             <script>
                                 function onSelectPerawatan(jenisPerawatan) {
                                     switch (jenisPerawatan.value) {
                                         case "Perawatan Khusus":
                                             document.getElementById("khusus").style.display = "block";
                                             document.getElementById("variasi").style.display = "none";
                                             document.getElementById("carCare").style.display = "none";
                                             break;
                                         case "Variasi / Aksesoris Tambahan":
                                             document.getElementById("khusus").style.display = "none";
                                             document.getElementById("variasi").style.display = "block";
                                             document.getElementById("carCare").style.display = "none";
                                             break;
                                         case "Car Care":
                                             document.getElementById("khusus").style.display = "none";
                                             document.getElementById("variasi").style.display = "none";
                                             document.getElementById("carCare").style.display = "block";
                                             break;
                                         default:
                                             document.getElementById("khusus").style.display = "none";
                                             document.getElementById("variasi").style.display = "none";
                                             document.getElementById("carCare").style.display = "none";
                                     }
                                 }
                             </script>
